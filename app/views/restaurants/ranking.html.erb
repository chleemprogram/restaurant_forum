<div class="container">
  <div class="row">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to "首頁", root_path, class: "nav-link"%>
      </li>
      <li class="nav-item">
        <%= link_to "餐廳最新動態", feeds_restaurants_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Top 10 人氣餐廳", ranking_restaurants_path, class: "nav-link active" %>
      </li>
    </ul>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="page-header">
        <h3>Top 10 人氣餐廳 <small>（收藏數最高）</small></h3>
      </div>
      
    <% @top_10_restaurants.each do |restaurant| %>
      <div class="ranking-item">
        <div class="col-sm-3">
          <% if restaurant.image?%>   
            <%= image_tag restaurant.image.url, calss: "img-responsive center-block" %>
          <% end %> 
        </div>
        <div class="col-sm-9">
          <h4>
            <%= restaurant.name %>
            <span class="bg-secondary text-white">收藏數：<%= restaurant.favorites_count %></span>
          </h4>
          <p><%= truncate(restaurant.description, length: 200) %></p> 
          <div>
            <%= link_to "Show", restaurant_path(restaurant), class: "btn btn-primary" %>
            <%= render partial: "shared/favorite", locals: {restaurant: restaurant}%>
          </div>
        </div>
        <div class="clearfix"></div>
      </div>   
    <% end %>
    </div>
  </div>
</div>