<div class="container">
  <div class="row">
    <ul class="nav nav-pills nav-pills-center">
      <li role="presentation" class="nav-item"><a class="nav-link active" href="/">全部餐廳</a></li>
      <% @categories.each do |category| %>
        <li role="presentation" class="nav-item"><a class="nav-link" href="category_path(category)"><%=category.name%></a></li>
      <% end %>
    </ul>
    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          
          <%= image_tag restaurant.image.url, calss: "img-responsive center-block" %>
          
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p><%= restaurant.category.name %></p>
            <p><%= truncate(restaurant.description, length: 80) %></p>
          </div>
        </div>
      </div>
    <% end %>
    <div class="text-center">
      <%= paginate @restaurants %>
    </div>
  </div>
</div>


