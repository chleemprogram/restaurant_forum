<% @restaurants.each do |restaurant| %>
  <div class="col-sm-6 col-md-4">
    <div class="restaurant-item">
      <% if restaurant.image?%>   
        <%= image_tag restaurant.image.url, calss: "img-responsive center-block" %>
      <% end %> 
      <div class="caption">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <p><%= restaurant.category.name %></p>
        <p><%= truncate(restaurant.description, length: 80) %></p>
        <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
      </div>
    </div>
  </div>
<% end %>
<div class="text-center"><%= paginate @restaurants %></div>